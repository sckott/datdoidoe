#!/usr/bin/env ruby

require "thor"

class Dz < Thor
  include Thor::Actions
  require 'dozedois'
  require 'launchy'
  require 'pp'

  desc "doze STRING", "Get bib data from PDFs"
  # method_option :path => :string
  def doze(tt)
  	tt = "#{tt}"
    #tt = tt.to_s.split(',')
    Dozedois.doze(path: tt)
  end
end

Dz.start(ARGV)
